# Global defaults (override in per-service env if needed)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example
MONGO_URL=mongodb://mongo:27017/workflow
REDIS_URL=redis://redis:6379
JWT_SECRET=devsecret_replace
# Refresh token secret (optional separate). If unset falls back to JWT_SECRET.
REFRESH_TOKEN_SECRET=
# OTEL endpoint (e.g., http://otel-collector:4318). Leave blank to disable.
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAMESPACE=workflow-platform
OTEL_ENABLED=true

NEXT_PUBLIC_GATEWAY_URL=http://localhost:4000
