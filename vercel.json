{
  "version": 2,
  "buildCommand": "npm install --workspaces --include-workspace-root=false && cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "github": { "silent": false },
  "ignoreCommand": "bash -c 'CHANGED=$(git diff --name-only $VERCEL_GIT_PREVIOUS_COMMIT $VERCEL_GIT_COMMIT || echo); echo \"$CHANGED\" | grep -q '^frontend/' || [ ! -z \"$FORCE_FRONTEND_BUILD\" ]'",
  "env": {
    "NEXT_PUBLIC_GATEWAY_URL": "https://your-gateway.example.com",
    "NEXT_PUBLIC_AUTH_URL": "https://your-auth.example.com",
    "NEXT_PUBLIC_WORKFLOW_URL": "https://your-workflow.example.com"
  }
}
